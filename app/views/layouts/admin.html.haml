!!!
%html{:lang => I18n.locale}
  %head
    %title=# title
    = stylesheet_link_tag    'admin'
    = javascript_include_tag 'admin'
    <script type="text/javascript"> $j = jQuery.noConflict();</script>
    = csrf_meta_tags
  %body{:style => "margin: 0;"}
    #top
      .container
        %p#logged_user
          %span.inner
            Welcome back, 
            =# current_user.first_name + ' ' + current_user.last_name
            =# link_to "Profile", edit_admin_user_path(current_user.id)
            =# link_to "Log out", destroy_user_session_path, :method => :delete
            =# link_to "Back to Website", '/'
        #header
          = render :partial => "shared/admin/top_menu"
    #page_header_container
      .container
        #page_header.without_page_details
          .page_info_container
            %h1#page_title Admin Panel
          .clear
    #page
      .container
        .container_inner
          %ul#breadcrumbs
            = render :partial => "shared/admin/breadcrumbs"
          #page_content
            #dashboard
              = yield 
              .clear
          .content_fix
      #footer
        %p#copyright &copy;2011 Copyright